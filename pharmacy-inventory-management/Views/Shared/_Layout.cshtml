<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes" rel="stylesheet">

    <title>@ViewData["Title"] - pharmacy_inventory_management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fortawesome/fontawesome-free/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pharmacy_inventory_management.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <div class="row g-0 vh-100">
        <div class="col-3 ps-3 pe-0 side-nav scrollable h-100 overflow-y-auto scrollable-left overflow-x-hidden d-flex flex-column justify-content-between">
            <div class="side-top">
                <h1 class=" display-3 mt-5"><a href="#" class="text-decoration-none text-white">Dr. Pharma</a></h1>
                <ul class="list-unstyled">
                    <li>
                        <a class="w-100 py-3 d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                            <h5 class="m-0"><i class="fa-solid fa-chart-line me-2 text-white"></i> <h6 class="m-0">Dashboard</h6> </h5>
                        </a>
                    </li>
                    <li class="d-flex justify-content-between align-items-center cursor-pointer">
                        <a class="w-100 py-3 d-flex align-items-center">
                            <h5 class="m-0">
                                <i class="fa-solid fa-warehouse me-2 text-white"></i>
                                <h6 class="m-0">Company Inventories</h6>
                            </h5>
                        </a>
                        <a>
                            <h5 class="mb-0"><i class="fa-solid fa-angle-down company-angle-down me-2" style="transition: .3s;"></i></h5>
                        </a>

                    </li>
                    <ul class="company arrow-list" style="display: none;">
                        <li class="p-2 d-flex"><a asp-controller="Company" asp-action="Inventory" class="w-100">All Company Inventories</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Company" asp-action="Inventory" asp-route-location="first" class="w-100">first inventory</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Company" asp-action="Inventory" asp-route-location="second" class="w-100">second inventory</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Company" asp-action="Inventory" asp-route-location="third" class="w-100">third inventory</a></li>
                    </ul>
                    <li class="d-flex justify-content-between align-items-center cursor-pointer">
                        <a class="w-100 py-3 d-flex align-items-center">
                            <h5 class="m-0">
                                <i class="fa-solid fa-boxes-stacked me-2 text-white"></i>
                                <h6 class="m-0">Pharmacies' inventory</h6>
                            </h5>
                        </a>
                        <a>
                            <h5 class="mb-0"><i class="fa-solid fa-angle-down pharmacies-angle-down me-2" style="transition: .3s;"></i></h5>
                        </a>
                    </li>
                    <ul class="pharmacies arrow-list" style="display: none;">
                        <li class="p-2 d-flex"><a asp-controller="Pharmacy" asp-action="Inventory" class="w-100">All Pharmacies</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Pharmacy" asp-action="Inventory" asp-route-location="first" class="w-100">first pharmacy</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Pharmacy" asp-action="Inventory" asp-route-location="second" class="w-100">second pharmacy</a></li>
                        <li class="p-2 d-flex"><a asp-controller="Pharmacy" asp-action="Inventory" asp-route-location="third" class="w-100">third pharmacy</a></li>
                    </ul>

                    
                    <li>
                    <li class="d-flex justify-content-between align-items-center cursor-pointer">
                        <a class="w-100 py-3 d-flex align-items-center">
                            <h5 class="m-0">
                                <i class="fa-solid fa-handshake-angle me-2 text-white"></i>
                                <h6 class="m-0">Pharmacies transactions</h6>
                            </h5>
                        </a>
                        <a>
                            <h5 class="mb-0">
                                <i class="fa-solid fa-angle-down transaction-angle-down me-2"
                                   style="transition: .3s;"></i>
                            </h5>
                        </a>
                    </li>
                    <ul class="transactions arrow-list" style="display: none;">
                        <li class="p-2 d-flex"><a asp-controller="Transaction" asp-action="Contracted" asp-route-id="@null" class="w-100 d-flex justify-content-between align-items-center"><p class="m-0">Contracted pharmacies</p><i class="fa-solid fa-handshake me-2 text-white"></i></a></li>
                        <li class="p-2 d-flex"><a asp-controller="Transaction" asp-action="Invoice" asp-route-name="@null" asp-route-date="@null" asp-route-id="@null" class="w-100 d-flex justify-content-between align-items-center"><p class="m-0">Invoices</p><i class="fa-solid fa-money-bill-transfer me-2 text-white"></i></a></li>
                        <li class="p-2 d-flex"><a asp-controller="Transaction" asp-action="Returns" asp-route-name="@null" asp-route-date="@null" asp-route-id="@null" class="w-100 d-flex justify-content-between align-items-center"><p class="m-0">Returns</p><i class="fa-solid fa-rotate-left me-2 text-white"></i></a></li>
                    </ul>
                    <li>
                        <a class="w-100 py-3 d-flex align-items-center" asp-controller="Users" asp-action="Index">
                            <h5 class="m-0"><i class="fa-solid fa-users me-2 text-white"></i> <h6 class="m-0">System Users</h6> </h5>
                        </a>
                    </li>
                    <li>
                        <a class="w-100 py-3 d-flex align-items-center" asp-controller="Workflow" asp-action="Tracking">
                            <h5 class="m-0"><i class="fa-solid fa-magnifying-glass me-2 text-white"></i> <h6 class="m-0">Workflow tracking</h6> </h5>
                        </a>
                    </li>
                    <li>
                        <a class="w-100 py-3 d-flex align-items-center" asp-controller="Notification" asp-action="Index">
                            <h5 class="m-0">
                                <i class="fa-solid fa-bell me-2 text-white"></i>
                                <h6 class="m-0">Notifications</h6>
                            </h5>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="side-bottom d-flex justify-content-between mb-2">
                <a href="">
                    <h5 class="cursor-pointer">Profile <i class="fa-solid fa-user"></i></h5>
                </a>
                <a href="">
                    <h5 class="cursor-pointer">Logout <i class="fa-solid fa-right-from-bracket me-2"></i></h5>
                </a>
            </div>
        </div>

        <div class="col-9 h-100 scrollable overflow-y-auto overflow-x-hidden">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var pharmacyArrow = document.querySelector(".pharmacies-angle-down")
        var companyArrow = document.querySelector(".company-angle-down")
        var transactionArrow = document.querySelector(".transaction-angle-down")
        $(".pharmacies-angle-down").parent().parent().parent().on('click', () => {
            $(".arrow-list").slideUp()
            if (pharmacyArrow.style.transform == "rotate(180deg)") {
                pharmacyArrow.style.transform = "rotate(0deg)";
                $(".pharmacies").slideUp();
            } else {
                if (companyArrow.style.transform == "rotate(180deg)")
                    companyArrow.style.transform = "rotate(0deg)";
                if (transactionArrow.style.transform == "rotate(180deg)")
                    transactionArrow.style.transform = "rotate(0deg)";
                pharmacyArrow.style.transform = "rotate(180deg)";
                $(".pharmacies").slideDown();
            }
        })
        $(".company-angle-down").parent().parent().parent().on('click', () => {
            $(".arrow-list").slideUp()
            if (companyArrow.style.transform == "rotate(180deg)") {
                companyArrow.style.transform = "rotate(0deg)";
                $(".company").slideUp();
            } else {
                if (pharmacyArrow.style.transform == "rotate(180deg)")
                    pharmacyArrow.style.transform = "rotate(0deg)";
                if (transactionArrow.style.transform == "rotate(180deg)")
                    transactionArrow.style.transform = "rotate(0deg)";

                companyArrow.style.transform = "rotate(180deg)";
                $(".company").slideDown();
            }
        })
        $(".transaction-angle-down").parent().parent().parent().on('click', () => {
            $(".arrow-list").slideUp()
            if (transactionArrow.style.transform == "rotate(180deg)") {
                console.log(0);
                transactionArrow.style.transform = "rotate(0deg)";
                $(".transactions").slideUp();
            } else {
                if (pharmacyArrow.style.transform == "rotate(180deg)")
                    pharmacyArrow.style.transform = "rotate(0deg)";

                if (companyArrow.style.transform == "rotate(180deg)") { }
                companyArrow.style.transform = "rotate(0deg)";
                transactionArrow.style.transform = "rotate(180deg)";
                $(".transactions").slideDown();
            }
        })
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
