@model MedicineLocationVM
@{
    ViewData["Title"] = "UpdateAmount";

    // var medicineLocation = (MedicineLocations)ViewData["medicineLocation"];
    // ViewData["rowToUpdate"] = medicineLocation;
}

<style>
    .card-gray {
        transition: .3s;
    }

        .card-gray:hover {
            background-color: #109A81;
        }
</style>
<div class="container h-100 px-4 py-4 text-light">
    <form asp-action="UpdateAmount" method="post">
        <h1>Medicine name: <span class="text-main">@Model.Medicine.Name</span></h1>
        <div class="row mb-3">
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">

                    <h4>Category: @Model.Medicine.Category</h4>
                </div>
            </div>
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">
                    <h4>Price: @Math.Round(Model.Medicine.Price, 2) EGP</h4>
                </div>
            </div>
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">
                    <h4 class="w-100">
                        <input type="number" asp-for="@Model.Quantity" step="1" min="1" class="form-control"
                               placeholder="Price" />

                        <input type="hidden" asp-for="@Model.MedicineId" value="@Model.MedicineId" />
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="hidden" asp-for="@Model.LocationId" value="@Model.LocationId" />
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 p-2">
                <div class="image card overflow-hidden">
                    <img class="w-100" src="~/Files/Images/@Model.Medicine.ImageUrl" alt="">
                </div>
            </div>
            <div class="col-md-6 p-2">
                <div class="card-gray-solid h-100 p-3 d-flex flex-column justify-content-between">
                    <div class="d-flex flex-column">
                        <h3>Indecations (Uses): </h3>
                        <p class="border-bottom border-dark-subtle pb-3 mb-3">
                            @Model.Medicine.Indecations
                        </p>

                        <h3>Side effects: </h3>
                        <p class="border-bottom border-dark-subtle pb-3 mb-3">
                            @Model.Medicine.SideEffects
                        </p>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <input type="submit" class="btn btn-outline-green me-2" value="Update Amount" />
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
