                                    <td>
                                        <a asp-action="UpdateAmount" asp-route-medicineId="@item.MedicineId" asp-route-locationId="@item.LocationId" class="btn btn-outline-green mx-2 my-3">Update Amount</a>
                                    </td>
                                </tr>
