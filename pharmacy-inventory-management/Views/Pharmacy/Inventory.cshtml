                        <tr>
                            <td>
                                <p class="mx-2 my-3">Asprine</p>
                            </td>
                            <td>
                                <p class="mx-2 my-3">10 EGP</p>
                            </td>
                            <td>
                                <p class="mx-2 my-3">200</p>
                            </td>
                            <td>
                                <button class="btn btn-outline-warning mx-2 my-3">Details</button>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}

<!-- Your HTML code for the button and form -->
<button class="btn-add btn btn-green btn-lg" title="Add medicine">
    <i class="fa-solid fa-hand-holding-medical"></i>
</button>
<div class="layer row align-items-center justify-content-center" style="display: none;">
    <div class="col-4">
        <div class="card-gray p-4">
            <h2 class="text-main mb-4">Add Medicine</h2>
            <form action="">
                <div class="row mb-2">
                    <div class="col-12">
                        <input type="text" name="" id="" class="form-control" placeholder="Medicine name">
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <input type="number" step=".10" min="1" name="" id="" class="form-control"
                               placeholder="Price">
                    </div>
                    <div class="col-6">
                        <input type="number" name="" min="1" id="" class="form-control" placeholder="Quantity">
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <input type="date" name="" id="" class="form-control" placeholder="Production Date">
                    </div>
                    <div class="col-6">
                        <input type="date" name="" id="" class="form-control" placeholder="Expiry Date">
                    </div>
                </div>
                @if (location == "" || location is null)
                {
                    <div class="row mb-2">
                        <div class="col-12">
                            <input list="InventoryLocation" class="form-control" placeholder="Inventory location" />
                            <datalist id="InventoryLocation">
                                <option value="first" />
                                <option value="second" />
                                <option value="third" />
                            </datalist>
                        </div>
                    </div>
                }
                else
                {
                    <input type="hidden" class="form-control" placeholder="Inventory location" value="@location" />

                }
                <div class="row mb-2">
                    <div class="col-12">
                        <textarea class="form-control" placeholder="Indecations" name="" id="" cols="30"
                                  rows="3"></textarea>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <textarea class="form-control" placeholder="Side effects" name="" id="" cols="30"
                                  rows="3"></textarea>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 d-flex flex-row-reverse">
                        <input type="reset" value="CANCEL" id="" class="btn btn-outline-warning"
                               placeholder="Expiry date">
                        <input type="submit" value="ADD MEDICINE" id="" class="btn btn-outline-green me-2"
                               placeholder="Expiry date">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Rest of your HTML code -->
<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Your script -->
<script>
    $(document).ready(function () {
        $(".btn-add").on('click', () => {
            $('.layer').fadeIn(100);
        });

        $("[type='reset']").on('click', () => {
            $('.layer').fadeOut(100);
        });
    });
</script>