@model MedicineVM
@{
    ViewData["Title"] = "Update";
}

<style>
    .card-gray {
        transition: .3s;
    }

        .card-gray:hover {
            background-color: #109A81;
        }
</style>
<div class="container h-100 px-4 py-4 text-light">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
    <h1>
        <input type="text" placeholder="Medicine Name" asp-for="@Model.Name" class="form-control" />
    </h1>
        <span asp-validation-for="@Model.Name" class="text-main"></span>

        <div class="row mb-3">
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">

                    <input type="text" placeholder="Medicine category" asp-for="@Model.Category" class="form-control" />
                    <span asp-validation-for="@Model.Category" class="text-main"></span>

                </div>
            </div>
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">
                    <h4 class="w-100 mb-0">
                        <input type="number" step=".1" min="0" placeholder="Medicine price" asp-for="@Model.Price" class="form-control" />
                        <span asp-validation-for="@Model.Price" class="text-main"></span>
                    </h4>
                </div>
            </div>
            <div class="col-sm-4 p-2">
                <div class="card-gray h-100 p-3 d-flex align-items-center">
                    <h4>Amount: 200</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 p-2">
                <div class="image card overflow-hidden">
                    <img class="w-100" src="~/Files/Images/@Model.ImageUrl" alt="">
                </div>
            </div>
            <div class="col-md-6 p-2">
                <div class="card-gray-solid h-100 p-3 d-flex flex-column justify-content-between">
                    <div class="d-flex flex-column">
                        <h3>Indecations (Uses): </h3>
                        <p class="border-bottom border-dark-subtle pb-3 mb-3">
                            <textarea class="form-control" asp-for="@Model.Indecations" placeholder="Indecations" id="" cols="30"
                                      rows="3"></textarea>
                            <span asp-validation-for="@Model.Indecations" class="text-main"></span>

                        </p>

                        <h3>Side effects: </h3>
                        <p class="border-bottom border-dark-subtle pb-3 mb-3">
                            <textarea class="form-control" asp-for="@Model.SideEffects" placeholder="Indecations" id="" cols="30"
                                      rows="3"></textarea>
                            <span asp-validation-for="@Model.SideEffects" class="text-main"></span>
                        </p>
                        <label asp-for="@Model.Image" class="text-white mb-2">Medicine Image <span class="smai">(Leave this field empty if don't need to change Mdicine Image')</span></label>
                        <input type="file" class="form-control mb-3" asp-for="@Model.Image" />
                        <input type="hidden" class="form-control mb-3" asp-for="@Model.ImageUrl" value="@Model.ImageUrl" />
                        <span asp-validation-for="@Model.ImageUrl" class="text-main"></span>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        
                        <a class="btn btn-outline-warning me-2" asp-action="Details" asp-route-id="@Model.Id">Cancel<i class="fa-solid fa-ban ms-2"></i></a>
                        <button type="submit" class="btn btn-outline-green me-2">Update<i class="fa-regular fa-pen-to-square ms-2"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}